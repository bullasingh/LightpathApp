<Window x:Class="LightpathApp.StartUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LightPointMedical Speciman Analyser" 
        Closing="Window_Closing" 
        WindowState="Maximized" 
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid>
        <GroupBox Header="Wait" Background ="#6D68FC" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" FontWeight="Bold">
            <StackPanel>
                <Label x:Name="startMessage" Content="Initialising...    " Margin="10,10,0,0" HorizontalAlignment="Left"  VerticalAlignment="Center" Panel.ZIndex="1" FontSize="14" />
                <ProgressBar x:Name="startProgressBar" HorizontalAlignment="Center" Height="30" Margin="10,10,30,20" VerticalAlignment="Top" Width="200" Value="10" />
            </StackPanel>
        </GroupBox>
        <Image Panel.ZIndex="0" Margin="0" Stretch="Fill">
            <Image.Source>
                <ImageSource>Proposed GUI_Background.jpg</ImageSource>
            </Image.Source>
        </Image>
    </Grid>
</Window>
